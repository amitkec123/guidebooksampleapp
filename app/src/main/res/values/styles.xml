<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EventImage">
        <item name="android:layout_width">@dimen/place_item_image_height</item>
        <item name="android:layout_height">@dimen/place_item_image_height</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="srcCompat">@color/thumbnail_bg_color</item>
    </style>

    <style name="EventName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_12</item>
        <item name="android:layout_marginTop">@dimen/margin_12</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/place_item_name_text_size</item>
        <item name="android:textColor">@color/event_name_color</item>
    </style>

    <style name="EventStart" parent="EventName">
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:textSize">@dimen/place_item_others_text_size</item>
        <item name="android:textColor">@color/event_others_color</item>
    </style>

    <style name="EventStart.LastItem">
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:textSize">@dimen/place_item_others_text_size</item>
        <item name="android:textColor">@color/event_others_color</item>
    </style>
</resources>